<article>
    <h2>Edit post </h2>
    <form class="edit-post-form">
        <div>
            <input name ="post-title"  type="text" value="{{post.title}}">
        </div>
        <div>
            Posted by you on {{format_date post.created_at}} | {{post.comments.length}} {{format_plural "comment" post.comments.length}}
        </div>
        <div>
        <label for="">Post</label>
        <textarea name="post-text" id="post-text" >{{post.post_text}}</textarea>
        </div>

        <button type="submit">Save Change</button>
        <button type="button" class="delete-post-btn">Delete </button>



    </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>